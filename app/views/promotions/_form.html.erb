<p><%= link_to  'Voltar', promotions_path %></p>

<div id="mensagens">
</div>

<%= form_with model: @promotion, local: false do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :code  %>
    <%= form.text_field :code %>
  </p>

  <p>
    <%= form.label :discount_rate %>
    <%= form.number_field :discount_rate %>
  </p>

  <p>
    <%= form.label :coupon_quantity %>
    <%= form.number_field :coupon_quantity %>
  </p>

  <p>
    <%= form.label :expiration_date %>
    <%= form.date_field :expiration_date %>
  </p>

  <p>
    <%= form.collection_check_boxes :category_ids, @categories, :id, :name %>
  </p>

  <%= form.submit %>
<% end %>
