<p><%= link_to  'Voltar', categories_path %></p>

<div id="mensagens"></div>

<%= form_with model: @category, local: false do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :code  %>
    <%= form.text_field :code %>
  </p>

  <%= form.submit %>
<% end %>
